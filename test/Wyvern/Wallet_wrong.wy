contract Wallet :
    {TOP => this}
    {this => sender}
    {sender => BOT}
    owner : address{this}
    balance : int{this}

    @public
    def deposit{sender, sender -> sender}(value : int{sender}) :
        endorse{sender -> this} :
            balance = balance + endorse(value, sender, this)

    @public
    def withdraw{sender, sender -> sender}(amount : int{sender}, sender : address{sender}) :
        if balance < amount or sender != owner :
            return

        endorse{sender -> this} :
            balance = balance - endorse(amount, sender, this)
