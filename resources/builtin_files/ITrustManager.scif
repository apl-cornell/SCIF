interface ITrustManager {
    /**
        if a trusts b.
        True: a trusts b.
        False: not sure
    */
    @public
    bool trusts(address a, address b);
    @public
    bool trustsWithProof(address a, address b, address[] proof);

    @public
    bool setTrust(address trustee);
    @public
    bool revokeTrust(address trustee);
}